<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="drink"
            type="com.wise.cocktail.domain.model.Drink" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CoktailDetailsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cocktail_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/dimen_10"
        app:layout_constraintBottom_toTopOf="@+id/tv_cocktail_detail_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cocktail_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/black"
        android:text="@{@string/cocktail_details_name(drink.strDrink)}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_cocktail_detail_instruction" />

    <TextView
        android:id="@+id/tv_cocktail_detail_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:textColor="@color/orange"
        android:text="@{@string/cocktail_details_instruction(drink.strInstructions)}"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toTopOf="@+id/tv_cocktail_detail_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_cocktail_detail_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/black"
        android:text="@{@string/cocktail_details_category(drink.strCategory)}"
        app:layout_constraintBottom_toTopOf="@+id/tv_cocktail_detail_measure"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_cocktail_detail_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:textSize="@dimen/text_size_14"
        android:text="@{@string/cocktail_details_measure(drink.strMeasure1)}"
        app:layout_constraintBottom_toTopOf="@id/spacer"
        app:layout_constraintStart_toStartOf="parent" />

    <Space
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>